[core]
excludesfile = ~/.gitignore_global

[user]
name = Niko Dziemba
email = niko@dziemba.com

[push]
default = current

[status]
relativepaths = false

[alias]
aa = add -A
ap = add -p
fs = !git fetch --all && git status
st = status -s -b
co = checkout
df = diff
dfs = diff --stat
ds = diff --staged
dss = diff --staged --stat
cm = commit -m
amend = commit --amend
fixup = commit --amend --no-edit
pr = pull --rebase
puf = push --force-with-lease
rom = !git fetch --all && git rebase origin/master
rc = rebase --continue
rs = rebase --skip
ra = rebase --abort
wip = !git add -A && git commit -m 'WIP'
cp = cherry-pick
rh = reset --hard
ls = log --stat --decorate --graph
allmine = rebase -i -x 'git amend --no-edit --reset-author'
sh = show
up = pull --rebase --autostash
fresh = !git rh && git clean -xdf && git co master && git up && git st
br = branch -v --sort=-committerdate
back = reset HEAD^
cln = clean -fdxe .idea
ma = !git co master && git up
cb = co -b
mb = !git ma && git cb

[http]
cookiefile = ~/.gitcookies

[diff]
renameLimit = 8192

[diff "shibboleth"]
textconv = ~/dev/shibboleth-git/shibboleth-show.sh
cachetextconv = false
