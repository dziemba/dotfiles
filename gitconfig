[core]
excludesfile = ~/.gitignore_global

[user]
name = Niko Dziemba
email = niko@dziemba.com

[push]
default = current

[alias]
aa = add -A
ap = add -p
fs = !git fetch --all && git status
st = status
co = checkout
df = diff
dfs = diff --stat
ds = diff --staged
dss = diff --staged --stat
cm = commit -m
amend = commit --amend
pr = pull --rebase
rom = !git fetch --all && git rebase origin/master
rc = rebase --continue
rs = rebase --skip
ra = rebase --abort
wip = !git add -A && git commit -m 'WIP'
cp = cherry-pick
rh = reset --hard
ls = log --stat

[git-up "rebase"]
auto = false
[git-up "fetch"]
all = true
