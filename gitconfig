[alias]
aa = add -A
fs = !git fetch --all && git status
st = status
co = checkout
df = diff
ds = diff --staged
cm = commit
pr = pull --rebase
rom = !git fetch --all && git rebase origin/master
rc = rebase --continue
rs = rebase --skip

